            <TextView
                android:id="@+id/deviceStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/red_dark"
                android:textSize="@dimen/font_12"
                android:layout_marginHorizontal="@dimen/margin_x"
                android:layout_marginBottom="@dimen/margin_v"
                android:textAlignment="viewStart"
                android:gravity="start|center_vertical"
                android:visibility="gone"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:textStyle="bold"
                android:text="*This device blocked due to non payment." />

            <TextView
                android:id="@+id/Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:background="@color/primaryblack"
                android:textSize="@dimen/font_12"
                android:paddingVertical="@dimen/margin_3"
                android:gravity="center"
                android:textAlignment="center"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/margin_x"
                android:textStyle="bold"
                android:text="Tracking disabled" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>