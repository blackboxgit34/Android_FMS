<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_x"
        android:layout_marginBottom="@dimen/margin_x"
        app:cardBackgroundColor="@color/primary_little_fade"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_x"
        app:cardCornerRadius="@dimen/margin_x">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_v">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/blue"
                    android:src="@drawable/ic_car_twox"/>

                <TextView
                    android:id="@+id/tvVehicleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/font_12"
                    android:lines="1"
                    android:layout_marginEnd="@dimen/margin_x"
                    android:layout_marginStart="@dimen/margin_v"
                    android:fontFamily="@font/poppins_semibold"
                    tools:text="CH 01-AA-0987" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_black"/>

                <RadioGroup
                    android:id="@+id/rgYearSubscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_v"
                    android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="1 year subscription"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:buttonTint="@drawable/radio_button_selector" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="2 years subscription"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:buttonTint="@drawable/radio_button_selector" />
                </RadioGroup>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_x"
                android:layout_marginBottom="@dimen/margin_v"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_v"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/validityStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/grey_two"
                            android:layout_marginTop="@dimen/margin_v"
                            android:textSize="@dimen/font_12"
                            android:drawablePadding="@dimen/margin_x"
                            android:text="Subscription Validity" />

                        <LinearLayout
                            android:id="@+id/llLateFee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginEnd="@dimen/margin_8"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_bill"
                                app:tint="@color/red" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/grey_two"
                                android:textSize="@dimen/font_12"
                                android:drawablePadding="@dimen/margin_x"
                                android:text="Late Fee: " />
                            <TextView
                                android:id="@+id/lateFee"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/grey_two"
                                android:textSize="@dimen/font_12"
                                android:drawablePadding="@dimen/margin_x"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llBillAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginEnd="@dimen/margin_8"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_bill"
                                app:tint="@color/yellow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/grey_two"
                                android:textSize="@dimen/font_12"
                                android:drawablePadding="@dimen/margin_x"
                                android:text="Bill Amount: " />
                            <TextView
                                android:id="@+id/billAmount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="R12345.65"
                                android:textColor="@color/grey_two"
                                android:textSize="@dimen/font_12"
                                android:drawablePadding="@dimen/margin_x"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llTotalPayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginEnd="@dimen/margin_8"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_bill"
                                app:tint="@color/blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/grey_two"
                                android:textSize="@dimen/font_12"
                                android:drawablePadding="@dimen/margin_x"
                                android:text="Total Payable: " />
                            <TextView
                                android:id="@+id/totalFee"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="R12345.65"
                                android:textColor="@color/grey_two"
                                android:textSize="@dimen/font_12"
                                android:drawablePadding="@dimen/margin_x"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_3"
                            android:layout_marginEnd="@dimen/margin_xx"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/margin_8"
                                android:layout_gravity="center_vertical"
                                app:tint="@color/green"
                                android:src="@drawable/ic_calendar"/>

                            <TextView
                                android:id="@+id/tvExpirationDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="valid upto 31 Jan 2023"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_12"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:fontFamily="@font/poppins_bold"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvPaid"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_3"
                    android:layout_gravity="center_vertical|bottom"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:padding="@dimen/margin_3"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Amount Paid"
                    android:textColor="@color/yellow" />

                <TextView
                    android:id="@+id/tvPay"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_3"
                    android:background="@drawable/rect_curve_box"
                    android:backgroundTint="@color/green"
                    android:layout_gravity="center_vertical|bottom"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:paddingHorizontal="@dimen/margin_v"
                    android:paddingVertical="@dimen/margin_3"
                    android:textSize="@dimen/font_11"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Pay"
                    android:textColor="@color/white" />

            </androidx.appcompat.widget.LinearLayoutCompat>

