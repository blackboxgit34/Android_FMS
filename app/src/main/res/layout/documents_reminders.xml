<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_x"
        app:cardBackgroundColor="@color/primary_little_fade"
        app:cardCornerRadius="@dimen/margin_x">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_x">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvVehicleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HP 33"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="12sp"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tvDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Detail"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="end"
                    android:textSize="12sp"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white_translucent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDetails"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/fms_vehicle_list_details"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>