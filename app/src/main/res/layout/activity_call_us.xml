<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    tools:context=".ui.ui.customerCare.callus.CallUsActivity">

    <include layout="@layout/toolbar_layout"
        android:id="@+id/toolbar"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_x"
        android:layout_marginHorizontal="@dimen/margin_x">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/margin_x"
            app:cardBackgroundColor="@color/primary_little_fade">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="For Sales Contact"
                    android:drawableStart="@drawable/ic_handshake_sales"
                    android:drawableTint="@color/white"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="@dimen/margin_x"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/font_14"
                    android:layout_marginTop="@dimen/margin_xx"
                    android:layout_marginHorizontal="@dimen/margin_x"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSalesPersonName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/font_14"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/margin_xx"
                        android:layout_marginHorizontal="@dimen/margin_x"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSalesPersonContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/font_14"
                        android:layout_marginTop="@dimen/margin_xx"
                        android:layout_marginHorizontal="@dimen/margin_x"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <TextView
                    android:id="@+id/tvCallSales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingHorizontal="@dimen/margin_50"
                    android:textSize="@dimen/font_14"
                    android:paddingVertical="@dimen/margin_3"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/green"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="@dimen/font_20"
                    android:layout_marginBottom="@dimen/margin_xx"
                    android:layout_marginHorizontal="@dimen/margin_x"
                    android:background="@drawable/curve_semicircle"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/margin_x"
            android:layout_marginVertical="@dimen/margin_x"
            app:cardBackgroundColor="@color/primary_little_fade">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="For Accounts Contact"
                    android:drawableStart="@drawable/ic_account"
                    android:drawableTint="@color/white"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="@dimen/margin_x"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/font_14"
                    android:layout_marginTop="@dimen/margin_xx"
                    android:layout_marginHorizontal="@dimen/margin_x"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAccPersonName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/font_14"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/margin_xx"
                        android:layout_marginHorizontal="@dimen/margin_x"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAccPersonContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"

                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/font_14"
                        android:layout_marginTop="@dimen/margin_xx"
                        android:layout_marginHorizontal="@dimen/margin_x"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <TextView
                    android:id="@+id/tvCallAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingHorizontal="@dimen/margin_50"
                    android:textSize="@dimen/font_14"
                    android:paddingVertical="@dimen/margin_3"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="@dimen/font_20"
                    android:layout_marginBottom="@dimen/margin_xx"
                    android:layout_marginHorizontal="@dimen/margin_x"
                    android:background="@drawable/curve_semicircle"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/margin_x"
            android:layout_marginVertical="@dimen/margin_x"
            app:cardBackgroundColor="@color/primary_little_fade">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Customer Care Executive"
                    android:drawableStart="@drawable/ic_customer"
                    android:drawableTint="@color/white"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="@dimen/margin_x"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/font_14"
                    android:layout_marginTop="@dimen/margin_xx"
                    android:layout_marginHorizontal="@dimen/margin_x"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCustName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/font_14"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/margin_xx"
                        android:layout_marginHorizontal="@dimen/margin_x"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCustContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/font_14"
                        android:layout_marginTop="@dimen/margin_xx"
                        android:layout_marginHorizontal="@dimen/margin_x"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <TextView
                    android:id="@+id/tvCallCust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingHorizontal="@dimen/margin_50"
                    android:textSize="@dimen/font_14"
                    android:paddingVertical="@dimen/margin_3"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/green"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="@dimen/font_20"
                    android:layout_marginBottom="@dimen/margin_xx"
                    android:layout_marginHorizontal="@dimen/margin_x"
                    android:background="@drawable/curve_semicircle"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/med_grey"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/margin_x"
            android:text="@string/unattended"/>



    </androidx.appcompat.widget.LinearLayoutCompat>

    <include layout="@layout/progress_bar"
        android:id="@+id/llProgressLayout"
        />

</androidx.appcompat.widget.LinearLayoutCompat>