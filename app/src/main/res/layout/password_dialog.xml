<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="10"
        android:hint="Username"
        android:imeOptions="actionNext"
        android:drawableStart="@drawable/ic_password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:drawablePadding="@dimen/margin_x"
        android:padding="@dimen/margin_x"
        android:textSize="@dimen/font_14"
        android:inputType="text"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="@dimen/margin_25"
        android:layout_marginTop="@dimen/margin_50"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:singleLine="true"/>

    <View
        android:id="@+id/vViewUser"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginHorizontal="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_v"
        app:layout_constraintTop_toBottomOf="@+id/etUsername"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/margin_25"
        android:layout_marginTop="@dimen/margin_xx"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_v"
            android:layout_marginRight="@dimen/margin_v"
            android:layout_marginBottom="@dimen/margin_50"
            android:layout_weight="1"
            android:background="@drawable/round_background"
            android:text="Cancel"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/margin_v"
            android:background="@drawable/round_background"
            android:text="Done"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>