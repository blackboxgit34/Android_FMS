<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/refresh_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ui.ui.notification.NotificationActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_layout"
        android:id="@+id/toolbar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/notification_list_adapter"
        android:layout_below="@id/toolbar"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/loadMore"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Load more..."
        android:textColor="@color/white"
        android:textSize="@dimen/font_14"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:gravity="center"
        app:cardBackgroundColor="@color/primary_little_fade"/>

    <TextView
        android:id="@+id/noItemFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No notification found"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/font_11"
        android:layout_centerInParent="true"/>

    <include
        android:id="@+id/progress"
        layout="@layout/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"/>

</RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>