<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_x"
        app:cardBackgroundColor="@color/primary_little_fade"
        app:cardCornerRadius="@dimen/margin_x">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_black">
                <TextView
                    android:id="@+id/tvVehName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Name"
                    android:padding="@dimen/margin_v"
                    android:fontFamily="@font/poppins_bold"
                    android:drawablePadding="@dimen/margin_v"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_caricon"
                    android:textColor="@color/white"/>
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_v">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_v"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/margin_v">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:drawableStart="@drawable/ic_fence"
                            android:drawablePadding="@dimen/margin_x"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center_vertical"
                            android:text="Fence Name"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/fence_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="end"
                            android:text="test"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivDelete"
                            android:layout_width="@dimen/margin_20"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:src="@drawable/ic_delete" />

                        <ImageView
                            android:id="@+id/ivCopy"
                            android:layout_width="@dimen/margin_20"
                            android:layout_height="match_parent"
                            android:src="@drawable/baseline_content_copy_24"
                            app:tint="@color/blue" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>