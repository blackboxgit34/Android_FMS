    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_v">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_v"
                    android:text="Vehicle Number"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8"
                    android:hint="20/11"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/grey_two"
                    android:textColorHint="@color/grey_two"
                    android:layout_marginHorizontal="@dimen/margin_x"
                    android:background="@color/primary_little_fade"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_v"
                    android:text="Select Vehicle Type"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/white"/>

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_v"
                    android:padding="@dimen/margin_8"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12"
                    android:hint="Select Vehicle Type"
                    android:layout_marginHorizontal="@dimen/margin_x"
                    android:textColorHint="@color/grey_two"
                    android:background="@color/primary_little_fade"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_v"
                    android:textSize="@dimen/font_12"
                    android:text="Alert Mobile Number"
                    android:textColor="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8"
                    android:hint="999999999"
                    android:inputType="number"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/grey_two"
                    android:textColorHint="@color/grey_two"
                    android:layout_marginHorizontal="@dimen/margin_x"
                    android:background="@color/primary_little_fade"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_12"
                    android:padding="@dimen/margin_v"
                    android:text="Installation Date"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8"
                    android:hint="07/24/2023"
                    android:textColor="@color/grey_two"
                    android:textSize="@dimen/font_12"
                    android:textColorHint="@color/grey_two"
                    android:layout_marginHorizontal="@dimen/margin_x"
                    android:background="@color/primary_little_fade"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_v"
                    android:textSize="@dimen/font_12"
                    android:text="Current Version"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8"
                    android:hint="4SE00\nNA"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/grey_two"
                    android:textColorHint="@color/grey_two"
                    android:layout_marginHorizontal="@dimen/margin_x"
                    android:background="@color/primary_little_fade"/>
            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_30"
                android:layout_marginBottom="@dimen/margin_x"
                android:layout_marginHorizontal="@dimen/margin_x">
                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/margin_25"
                    android:paddingVertical="@dimen/margin_8"
                    android:text="SUBMIT"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/primary_main_orange"
                    android:background="@drawable/rect_curve_box"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="@dimen/margin_30"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/med_grey_two"
                        android:layout_weight="0.45"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Or"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_weight="0.1"
                        android:textSize="@dimen/font_12"
                        android:textColor="@color/grey_two"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/med_grey_two"
                        android:layout_weight="0.45"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIEW DETAILS"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_12"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/margin_25"
                    android:paddingVertical="@dimen/margin_8"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/primary_main_orange"
                    android:background="@drawable/rect_curve_box"
                    android:layout_gravity="center"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>