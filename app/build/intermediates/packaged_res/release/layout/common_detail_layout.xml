<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLiveStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_x"
        app:cardBackgroundColor="@color/light_black"
        app:cardCornerRadius="@dimen/margin_x">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/margin_x">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/margin_v"
                        android:layout_marginHorizontal="@dimen/margin_x"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/margin_25"
                            android:layout_height="@dimen/margin_25"
                            android:src="@drawable/ic_location"
                            app:tint="@color/blue" />
                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:textSize="@dimen/font_11"
                            android:layout_marginStart="@dimen/margin_x"
                            android:text="60"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_x"
                        android:layout_marginVertical="@dimen/margin_v"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/margin_25"
                            android:layout_height="@dimen/margin_25"
                            app:tint="@color/yellow"
                            android:src="@drawable/ic_time"/>
                        <TextView
                            android:id="@+id/tvStartDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:layout_marginStart="@dimen/margin_x"
                            android:textAlignment="textStart"
                            android:gravity="start|center_vertical"
                            android:textSize="@dimen/font_11"
                            android:text="00:00:00 (HH:MM:SS)"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_x"
                        android:layout_marginVertical="@dimen/margin_v"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/margin_25"
                            android:layout_height="@dimen/margin_25"
                            app:tint="@color/green"
                            android:src="@drawable/ic_time"/>
                        <TextView
                            android:id="@+id/tvStopDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:layout_marginStart="@dimen/margin_x"
                            android:textAlignment="textStart"
                            android:gravity="start|center_vertical"
                            android:textSize="@dimen/font_11"
                            android:text="00:00:00 (HH:MM:SS)"
                            />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>