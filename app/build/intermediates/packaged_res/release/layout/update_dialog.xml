<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/primary_little_fade"
        android:layout_margin="@dimen/margin_xx"
        app:cardCornerRadius="@dimen/margin_x"
        app:cardElevation="@dimen/margin_v">

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_25"
            android:orientation="vertical">
        <ImageView
                android:layout_width="@dimen/margin_80"
                android:layout_height="@dimen/margin_50"
                android:src="@drawable/black_box"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="New version available "
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginTop="@dimen/margin_x"
                android:text="Please update app to new version"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvUpdateButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Update Now"
                android:paddingStart="@dimen/margin_30"
                android:paddingEnd="@dimen/margin_30"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="@dimen/margin_xx"
                android:layout_gravity="center"
                android:padding="@dimen/margin_v"
                android:background="@drawable/round_bg_green"
                />

         <View
             android:layout_width="match_parent"
             android:layout_height="20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>