<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".ui.ui.settings.ChnageVehicleDetailsActivity">

    <include layout="@layout/toolbar_layout"
        android:id="@+id/toolbar"/>

     <androidx.appcompat.widget.AppCompatEditText
         android:id="@+id/etSearchBar"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/white_curve_rect"
         android:backgroundTint="@color/primaryblack"
         android:drawableStart="@drawable/ic_search"
         android:drawablePadding="@dimen/margin_x"
         android:fontFamily="@font/poppins_regular"
         android:hint="Search vehicle.."
         android:visibility="gone"
         android:padding="@dimen/margin_x"
         android:imeOptions="actionSearch"
         android:singleLine="true"
         android:textColor="@color/grey_two"
         android:textColorHint="@color/grey_two"
         android:layout_marginHorizontal="@dimen/margin_x"
         android:layout_marginTop="@dimen/margin_x"
         android:layout_below="@id/toolbar"
         android:textSize="@dimen/font_10" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/upperLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_below="@id/etSearchBar"
        android:layout_marginTop="@dimen/margin_x"
        android:layout_marginHorizontal="@dimen/margin_x">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Vehicle Name"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/grey_two"
            android:padding="@dimen/margin_v"
            android:background="@drawable/rect_outline"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Vehicle Type"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/grey_two"
            android:padding="@dimen/margin_v"
            android:background="@drawable/rect_outline"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Installation Date"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/grey_two"
            android:padding="@dimen/margin_v"
            android:background="@drawable/rect_outline"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Action"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/grey_two"
            android:padding="@dimen/margin_v"
            android:background="@drawable/rect_outline"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vehicleList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upperLayout"
        android:visibility="gone"
        android:layout_above="@id/loadMore"
        android:layout_marginHorizontal="@dimen/margin_x"
        tools:listitem="@layout/chnage_vehicle_type_layout"/>

    <TextView
        android:id="@+id/loadMore"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Load more..."
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="@dimen/font_14"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:gravity="center"/>

    <include
        android:id="@+id/progress"
        android:visibility="gone"
        layout="@layout/progress_bar"/>

</RelativeLayout>