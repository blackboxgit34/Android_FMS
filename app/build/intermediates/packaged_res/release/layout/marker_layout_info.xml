<!-- layout_marker_info.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/primary_little_fade">
    <!-- Add your desired views and styling here -->
    <TextView
        android:id="@+id/Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_10"
        android:padding="@dimen/margin_3"
        android:layout_marginTop="@dimen/margin_v"
        android:text="not aavailable"
        android:textColor="@color/green"/>

    <TextView
        android:id="@+id/DateAndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_10"
        android:padding="@dimen/margin_3"
        android:layout_marginTop="@dimen/margin_v"
        android:text="not available"
        android:textColor="@color/yellow"/>

    <TextView
        android:id="@+id/Speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_10"
        android:padding="@dimen/margin_3"
        android:layout_marginTop="@dimen/margin_v"
        android:layout_marginBottom="@dimen/margin_v"
        android:text="not available"
        android:textColor="@color/blue"/>
</LinearLayout>
