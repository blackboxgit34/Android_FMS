<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_x"
        app:cardBackgroundColor="@color/primary_little_fade"
        app:cardCornerRadius="@dimen/margin_x"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_black">
                <TextView
                    android:id="@+id/tvVehName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Name"
                    android:padding="@dimen/margin_v"
                    android:fontFamily="@font/poppins_bold"
                    android:drawablePadding="@dimen/margin_v"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_caricon"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="@dimen/margin_20"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_delete"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_xx" />

                <TextView
                    android:id="@+id/tvViewFence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_xx"
                    android:layout_toLeftOf="@+id/ivDelete"
                    android:fontFamily="@font/poppins_bold"
                    android:text="View On Map "
                    android:textColor="@color/blue"
                    android:textSize="@dimen/font_12" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_v">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/margin_x">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/margin_v">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fence Name"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="@dimen/font_14"
                            android:drawableStart="@drawable/ic_fence"
                            android:layout_weight="0.5"
                            android:drawablePadding="@dimen/margin_x"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tvStoppagesCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="test"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="end"
                            android:textSize="12sp"
                            android:layout_weight="0.5"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginVertical="@dimen/margin_v">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fence Id"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="@dimen/font_14"
                            android:gravity="center_vertical"
                            android:drawablePadding="@dimen/margin_x"
                            android:drawableStart="@drawable/ic_fence"
                            android:layout_weight="0.5"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tvIgnition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12345"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="end"
                            android:textSize="12sp"
                            android:layout_weight="0.5"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/margin_v"
                        android:visibility="gone"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:text="BB-ID"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_14"

                            android:drawablePadding="@dimen/margin_x"
                            android:drawableStart="@drawable/ic_vehiclestatus"
                            android:fontFamily="@font/poppins_semibold" />

                        <TextView
                            android:id="@+id/tvDriving"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AB98989803123"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="end"
                            android:textSize="12sp"
                            android:layout_weight="0.5"
                            android:textColor="@color/white"/>

                    </LinearLayout>



                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>